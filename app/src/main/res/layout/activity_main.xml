<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mask"
    android:backgroundTint="#ff50b9"
    android:backgroundTintMode="screen"
    tools:context=".MainActivity" >

    <ImageView
        android:layout_width="172dp"
        android:layout_height="48dp"


        app:layout_constraintBottom_toTopOf="@+id/ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"

        app:layout_constraintHeight_percent=".25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.317"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        app:srcCompat="@drawable/tester" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgreg"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">




        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"

            android:fontFamily="@font/poppins_bold"
            android:paddingTop="16dp"
            android:textColor="#1a1a55"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Login or Signup"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_medium"
            android:lineSpacingExtra="6sp"
            android:textColor="#494949"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="Enter your mobile number to continue" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edbg"
            android:fontFamily="@font/poppins_medium"
            android:lineSpacingExtra="6sp"
            android:padding="10dp"
            android:textColor="#1a1a55"
            android:textSize="16sp"
            android:textColorHint="#1a1a1a55"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="10"
            android:ems="10"
            android:hint="Mobile Number" />



        <androidx.appcompat.widget.AppCompatButton
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/btngrbg"
            android:fontFamily="@font/poppins_medium"
            android:lineSpacingExtra="9sp"
            android:textAllCaps="false"
            android:textColor="#f8f8f8"
            android:textSize="18sp"
            android:onClick="ok"

            android:layout_marginBottom="32dp"
            android:textStyle="normal"
            android:text="Continue" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

