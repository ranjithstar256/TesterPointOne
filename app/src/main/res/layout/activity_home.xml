<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1a1a55"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_user" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llcompr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:lineSpacingExtra="6sp"
                android:textColor="#f5f5f5"
                android:textSize="12sp"
                android:textStyle="normal"
                android:text="Complete your Profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:lineSpacingExtra="6sp"
                android:textColor="#f5f5f5"
                android:textSize="10sp"
                android:textStyle="normal"
                android:text="This is important to participate Test and events" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|center_horizontal|center_vertical"

                android:layout_weight="1"
                app:srcCompat="@drawable/arrow_right" />

        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bgregbb"
        android:layout_height="110dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="left"
                    android:textColor="#1a1a55"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:text="Lets take SSLC Exam and win cash Prize" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButton2"
                    android:layout_width="120dp"
                    android:layout_height="27dp"
                    android:gravity="center"
                    android:textSize="10sp"

                    android:layout_gravity="left"
                    android:background="@drawable/btngrbg"
                    android:fontFamily="@font/poppins_medium"

                    android:text="Participate Now"
                    android:textAllCaps="false"
                    android:textColor="#f8f8f8"

                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cup" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_margin="10dp"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="#1a1a55"
            android:lineSpacingExtra="6sp"
            android:text="Event Participants"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="end|right"
            android:fontFamily="@font/poppins_medium"
            android:gravity="end"
            android:lineSpacingExtra="10sp"
            android:textColor="#1a1a55"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="Viewall" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btngrbg"
        android:fontFamily="@font/poppins_medium"
        android:lineSpacingExtra="9sp"

        android:text="Participate Now"
        android:textAllCaps="false"
        android:textColor="#f8f8f8"
        android:textSize="18sp"
        android:textStyle="normal"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bgregbb">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="10dp"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_user" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:lineSpacingExtra="2sp"
                        android:textColor="#1a1a55"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:text="Nikhil yalagandula" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:lineSpacingExtra="10sp"
                        android:textColor="#494949"
                        android:textSize="8sp"
                        android:textStyle="normal"
                        android:text="PODAR INTERNATIONAL SCHOOL" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|right">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/like_unsel"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="2sp"
                        android:textColor="#1a1a55"
                        android:textSize="8sp"
                        android:textStyle="normal"
                        android:text="200" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="10dp"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_user" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#1a1a55"
                        android:lineSpacingExtra="2sp"
                        android:text="Gopal Krishna"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:lineSpacingExtra="10sp"
                        android:textColor="#494949"
                        android:textSize="8sp"
                        android:textStyle="normal"
                        android:text="PODAR INTERNATIONAL SCHOOL" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|right">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/like_sel"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="2sp"
                        android:textColor="#1a1a55"
                        android:textSize="8sp"
                        android:textStyle="normal"
                        android:text="1.5k" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="10dp"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_user" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:lineSpacingExtra="2sp"
                        android:textColor="#1a1a55"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:text="Nikhil yalagandula" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:lineSpacingExtra="10sp"
                        android:textColor="#494949"
                        android:textSize="8sp"
                        android:textStyle="normal"
                        android:text="PODAR INTERNATIONAL SCHOOL" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|right">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/like_unsel"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="2sp"
                        android:textColor="#1a1a55"
                        android:textSize="8sp"
                        android:textStyle="normal"
                        android:text="200" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>